<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Class Members</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
    <link href="https://fonts.googleapis.com/css?family=Slabo=27px" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Sigmar+One" rel="stylesheet">
    <style>
      .body{
        font-family: 'Slabo 27px', serif;
      }
      h2{
        padding-top: 30px;
        padding-bottom: 20px;
        font-family: 'Sigmar One', cursive;
      }
      .form-wrap{
        width: 550px;
        background-color: #c0d0e0;
        border-radius: 5px;
        padding: 20px;
      }
      .form{
        position: absolute;
        top: 40%;
        left: 50%;
        transform: translate(-50%,-50%);
      }
      .form-wrap2{
        margin-top: 20px;
      }
      table, td, th {
        border: 1px solid #ddd;
        text-align: left;}
      table {
        border-collapse: collapse;
        width: 100%;}
      th, td {
        padding: 15px;}
      .form-control{
        width: 30%;
      }
    </style>
  </head>
  <body>
    <div class="form">
      <%- include layout/backbutton %>
      <div class="form-wrap">
        <center>
        <form action="/member/history/<%= data_member[0].id%>" method="post">
          <h2>CHOOSE CLASS</h2>
          <p>Member Name :</p>
          <p style="background-color:#6aabde; width:150px"><%= data_member[0].name%></p>
          <p>Fitness Class :</p>
          <select class="form-control" name="ClassnameId">
            <option value="<%= data_classname.id %>" selected> <%= data_classname.id %> </option>
            <% data_classname.forEach ( cont => { %>
            <option value ="<%= cont.id%>"> <%= cont.name %> </option>
            <% }) %>
          </select>
          <p>Setting Date :</p>
          <input class="form-control" type="date" name="date" value="<%= data_memberclass.date %> ">
          <br>
          <br>
          <button class="btn btn-default" type="submit">ADD NEW SESSIONS</button>
        </form>
        <center>
      </div>
      <div class="form-wrap2">
        <table>
          <tr>
            <th>No.</th>
            <th>ID</th>
            <th>Fitness Session</th>
            <th>Schedule </th>
            <th> Action</th>
          </tr>
          <% data_memberclass.forEach((c, index) =>{%>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= c.id %></td>
            <td><%= c.classname.name %></td>
            <td><%= c.date %></td>
            <td><a href="/member/history/edit/<%= c.id %>">EDIT</a> <a href="/member/history/delete/<%= c.id %>,<%= data_member[0].id %>">DELETE</a>
            </td>
          </tr>
          <%})%>
        </table>
      </div>
    </div>
  </body>
</html>
