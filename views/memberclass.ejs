<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Class Members</title>
  </head>
  <body>
  <center>
  <form action="/member/history/<%= data_member[0].id%>" method="post">
    <h2>CHOOSE CLASS</h2>
    <p>Member Name :</p>
    <p style="background-color:#6aabde; width:150px"><%= data_member[0].name%></p>
    <p>Fitness Class :</p>
    <select name="ClassnameId">
      <option value="<%= data_classname.id %>" selected> <%= data_classname.id %> </option>
      <% data_classname.forEach ( cont => { %>
      <option value ="<%= cont.id%>"> <%= cont.name %> </option>
      <% }) %>
    </select>
    <p>Setting Date :</p>
    <input type="date" name="date" value="<%= data_memberclass.date %> ">
    <br>
    <br>
    <button type="submit">ADD NEW SESSIONS</button>
  </form>
<br>
<br>
  <table>
    <tr>
      <th>No.</th>
      <th> ID </th>
      <th>Fitness Session</th>
      <th>Schedule </th>
      <th>Action</th>
    </tr>
    <% data_memberclass.forEach((c, index) =>{%>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= c.id %></td>
      <td><%= c.classname.name %></td>
      <td><%= c.date %></td>
      <td><a href="/member/history/edit/<%= c.id %>">EDIT</a>
      <td><a href="/member/history/delete/<%= c.id %>">DELETE</a></td>
      </td>
    </tr>
    <%})%>
  </table>
  <center>
  </body>
</html>
