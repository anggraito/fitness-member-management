<!DOCTYPE html>
<html>
  <head>

    <meta charset="utf-8">
    <style>
    table {
      font-family:Comic Extrabold, sans-serif;
      position: center;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 1px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
</head>

  <body>
  <center><h3>Class Name Data</h3><center>
  <a href="/classname/add"><button type="Submit" name="Add">Add New Class Name</button></a>
  <br>
  <br>
  <center>
  <table>
    <tr>
      <th>No</th>
      <th>ID</th>
      <th>Name</th>
      <th colspan='2'></th>
    </tr>
    <% var sum=1;%>
    <% data_classname.forEach(c => {%>
    <tr>
      <td><%= sum++ %></td>
      <td><%= c.id %></td>
      <td><%= c.name %></td>
      <td><td><a href="/classname/edit/<%=c.id%>">Edit</a></td>
      <td> <a href="/classname/delete/<%=c.id%>" onclick="return confirm('Are you sure want to delete this class?');">Delete</a></td>
    </tr>
      <%})%>
    </table>
  </center>
  </body>
</html>
